<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemView"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itemViewImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="6"></ImageView>

            <TextView
                android:id="@+id/itemViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:layout_margin="8dp">

            </TextView>

            <TextView
                android:id="@+id/itemViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:layout_margin="8dp">

            </TextView>


            <TextView
                android:id="@+id/itemViewQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:layout_margin="8dp">

            </TextView>

            <EditText
                android:id="@+id/numberOfPackages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ems="10"
                android:hint="ادخل عدد الصنادق المطلوبة"
                android:inputType="number" />


            <EditText
                android:id="@+id/itemNotesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="top"
                android:hint="ادخل ملاحظاتك حول المنتج"
                android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                android:lineSpacingMultiplier="1"
                android:maxLines="3"
                android:minLines="1" />

            <!--            <Button-->
            <!--                android:id="@+id/sendToCardBtn"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_margin="40dp"-->
            <!--                android:layout_weight="6"-->
            <!--                android:text="ارسل الى العربة" />-->

<!--            <ImageButton-->
<!--                android:id="@+id/sendToCardBtn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/cartItemImageHeightAndWidth"-->
<!--                android:layout_margin="40dp"-->
<!--                android:background="@drawable/rounded_button_white"-->
<!--                android:tint="@color/white"-->
<!--                app:srcCompat="@drawable/car_in_motion_btn_img" />-->

            <ImageButton
                android:id="@+id/sendToCardBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cartItemImageHeightAndWidth"
                android:layout_marginTop="@dimen/imageOfCartAndItemViewActivitiesMarginTop"
                android:layout_marginLeft="@dimen/imageOfCartAndItemViewActivitiesMarginLeftAndRight"
                android:layout_marginRight="@dimen/imageOfCartAndItemViewActivitiesMarginLeftAndRight"
                android:background="@drawable/rounded_button_white"
                android:scaleType="fitCenter"
                android:tint="@color/green_1"

                app:srcCompat="@drawable/car_2pluses_btn_img" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>